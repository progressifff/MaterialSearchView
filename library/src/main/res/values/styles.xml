<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchView">
        <item name="textSize">16sp</item>
        <item name="hint">Search</item>
    </style>

    <style name="SearchView.Light">
        <item name="textColor">@android:color/black</item>
        <item name="hintColor">@color/searchHintColorDark</item>
        <item name="backgroundColor">@android:color/white</item>
        <item name="overlayColor">@color/overlayColor</item>
        <item name="backBtnIcon">@drawable/ic_arrow_back_dark</item>
        <item name="clearBtnIcon">@drawable/ic_close_dark</item>
        <item name="recentIcon">@drawable/ic_recent_dark</item>
        <item name="clickEffect">@drawable/click_ripple_effect_dark</item>
        <item name="circleClickEffect">@drawable/click_ripple_circle_effect_dark</item>
    </style>

    <style name="SearchView.Dark">
        <item name="textColor">@android:color/white</item>
        <item name="hintColor">@color/searchHintColorLight</item>
        <item name="backgroundColor">#454545</item>
        <item name="overlayColor">@color/overlayColor</item>
        <item name="backBtnIcon">@drawable/ic_arrow_back_white</item>
        <item name="clearBtnIcon">@drawable/ic_close_white</item>
        <item name="recentIcon">@drawable/ic_recent_white</item>
        <item name="clickEffect">@drawable/click_ripple_effect_light</item>
        <item name="circleClickEffect">@drawable/click_ripple_circle_effect_light</item>
    </style>

</resources>